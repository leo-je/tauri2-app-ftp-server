{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "shellx:allow-open",
    "shellx:allow-kill",
    "shellx:allow-execute",
    "shellx:allow-spawn",
    "shellx:allow-where-is-command",
    "os:default",
    "store:default",
    "log:default",
    "clipboard:allow-write-text", 
    "clipboard:write-all"
  ]
}